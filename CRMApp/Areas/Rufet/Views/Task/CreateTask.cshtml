@model CRMApp.Areas.Rufet.Models.TaskVM

@{
    ViewData["Title"] = "CreateTask";
}



<section id="base-style" class="card">
    <!-- .card-body -->
    <div class="card-body  col-5">
        <!-- .form -->
        <form asp-action="CreateTask">
            <!-- .fieldset -->
            <fieldset>
                <legend>Create User For My Company</legend>
                <!-- .form-group -->
                <!-- /.form-group -->
                <!-- .form-group -->
                <div class="form-group">
                    <label for="tf4">Namee</label>
                    <div class="has-clearable">
                        <button type="button" class="close" aria-label="Close">
                            <span aria-hidden="true">
                                <i class="fa fa-times-circle"></i>
                            </span>
                        </button>
                        <input type="text" class="form-control" asp-for="@Model.JobTask.Name" placeholder="Name" value="">
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.JobTask.Description">Textarea</label>
                    <textarea class="form-control" asp-for="@Model.JobTask.Description" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="tf4">Amount</label>
                    <div class="has-clearable">
                        <button type="button" class="close" aria-label="Close">
                            <span aria-hidden="true">
                                <i class="fa fa-times-circle"></i>
                            </span>
                        </button>
                        <input type="text" class="form-control" asp-for="@Model.JobTask.Amount" placeholder="Amount" value="">
                    </div>
                </div>
                <!-- /.form-group -->
                <!-- .form-group -->
                

                <div class="form-group">
                    <label for="tf2">Start Time</label>
                    <input type="date" class="form-control" asp-for="@Model.JobTask.CreatedAt" placeholder="Start Time">
                </div>
                <div class="form-group">
                    <label for="tf2">Deadline Time</label>
                    <input type="date" class="form-control" asp-for="@Model.JobTask.DeadLine" placeholder="Deadline Time">
                </div>
                
                <div class="form-group">
                    <label class="col-form-label" for="selDefault">Role</label>
                    <select class="custom-select" asp-for="ClaimId" asp-items="ViewBag.Claims">
                        <option> Default select </option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Create Task" />
                </div>
                <!-- /.form-group -->
            </fieldset>
            <!-- /.fieldset -->
        </form>
        <!-- /.form -->
    </div>
   
</section>

